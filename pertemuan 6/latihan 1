class Student:
    "Common base class for all employees"
    empCount = 0
    
    name = str(input("masukan nama : "))
    nilai = int(input("masukan nilai :"))
    
    def __init__(self, name = name, nilai = nilai):
        self.name = name
        self.nilai = nilai
        Student.empCount += 1
        
    def displayCount(self):
        print("Total Student: %d" % Student.empCount)
    
    def printStudent(self):
        print("Name:", self.name, "\nnilai:", self.nilai)

Student1 = Student()

Student1.printStudent()
Student1.displayCount()

name = str(input("masukan nama : "))
